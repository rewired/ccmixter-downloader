{
  "name": "ccmixter-downloader",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite --host --port 5173\" \"wait-on tcp:5173 && node ./scripts/run-electron.mjs . --dev\"",
    "build": "vite build",
    "start": "node ./scripts/run-electron.mjs .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "got": "^14.2.0",
    "unzipper": "^0.12.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "electron": "^38.2.1",
    "electron-builder": "^24.13.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.ccmixter-downloader",
    "productName": "ccMixter Downloader",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
